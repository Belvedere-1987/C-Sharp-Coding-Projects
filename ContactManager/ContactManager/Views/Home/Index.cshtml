@{
    ViewBag.Title = "Contact Manager";
}

<title>Contact Manager</title>
<head>
    <script src="~/Content/knockout.js"></script>    
    
</head>
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-4">Sign up for Car Insurance by filling out the form below</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class=" form-group col-md-12">
                    First Name:
                </div>
                <div class=" form-group col-md-12">
                    Last Name:
                </div>
                <div class=" form-group col-md-12">
                    Email Address:
                </div>
                <div class=" form-group col-md-12">
                    Phone Number:
                </div>
                <button type="submit" class="btn btn-block btn-primary">Add</button>
                <button type="button" class="btn btn-block btn-primary">Edit</button>
                <button type="button" class="btn btn-block btn-primary">Delete</button>
                <div class=" form-group col-md-12">
                    Phone Book:
                </div>
            </div>
            }
        </div>
    </div>
</div>